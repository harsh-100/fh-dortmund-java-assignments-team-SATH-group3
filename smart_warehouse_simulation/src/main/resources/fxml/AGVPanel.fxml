<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="app.ui.AGVPanelController" spacing="8" style="-fx-padding:10" xmlns:fx="http://javafx.com/fxml">
    <Label text="AGV Control Panel" style="-fx-font-size:14px; -fx-font-weight:bold;" />
    <HBox spacing="8">
        <Button text="Start Simulation" onAction="#startSimulation" />
        <Button text="Stop Simulation" onAction="#stopSimulation" />
    </HBox>
    <Label fx:id="statusLabel" text="Status: idle" />

    <Label text="Robots:" style="-fx-font-weight:bold" />
    <ListView fx:id="robotListView" prefHeight="200" />

    <Label text="Add manual task" style="-fx-font-weight:bold; -fx-padding:8 0 0 0" />
    <HBox spacing="8">
        <TextField fx:id="itemIdField" promptText="Item ID" />
        <TextField fx:id="itemNameField" promptText="Item name" />
        <TextField fx:id="itemWeightField" promptText="Weight" />
        <Button text="Add Task" onAction="#addManualTask" />
    </HBox>
</VBox>
